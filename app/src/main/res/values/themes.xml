<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather2" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="bottomNavigationStyle">@style/Widget.Weather2.BottomNavigationView</item>

        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:colorBackground">@color/general_background</item>
    </style>

    <style name="Widget.Weather2.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>
</resources>